<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reg_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.register.RegisterActivity">


    <ImageView
        android:id="@+id/reg_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/back_btn" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="640dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="46dp"
            android:src="@drawable/register_comtimes_logo"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="@string/register"
            android:textColor="@color/textBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="13sp"
            android:layout_marginBottom="8dp"
            android:text="아이디" />

        <EditText
            android:id="@+id/reg_id_et"
            android:layout_width="296dp"
            android:layout_height="32dp"
            android:textSize="16sp"
            android:background="@drawable/round"
            android:layout_marginBottom="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="13sp"
            android:layout_marginBottom="8dp"
            android:text="비밀번호" />

        <EditText
            android:id="@+id/reg_pw_et"
            android:layout_width="296dp"
            android:layout_height="32dp"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:background="@drawable/round"
            android:layout_marginBottom="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="13sp"
            android:layout_marginBottom="8dp"
            android:text="비밀번호 확인" />

        <EditText
            android:id="@+id/reg_pw_check_et"
            android:layout_width="296dp"
            android:layout_height="32dp"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:background="@drawable/round"
            android:layout_marginBottom="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="13sp"
            android:layout_marginBottom="8dp"
            android:text="이름" />

        <EditText
            android:id="@+id/reg_name_et"
            android:layout_width="296dp"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/round"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="13sp"
            android:layout_marginBottom="8dp"
            android:text="이메일" />

        <EditText
            android:id="@+id/reg_email_et"
            android:layout_width="296dp"
            android:layout_height="32dp"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:background="@drawable/round"
            android:layout_marginBottom="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <ImageButton
            android:id="@+id/reg_register_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/register_register_btn"
            android:layout_marginTop="24dp"
            android:background="#ffff"/>
    </LinearLayout>




</RelativeLayout>